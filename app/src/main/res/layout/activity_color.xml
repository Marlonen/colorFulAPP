<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_height"
            android:layout_alignParentTop="true"
            android:background="#323437">

            <TextView
                android:id="@+id/tv_setting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="#fff"
                android:gravity="center"
                android:text="图片换色"
                android:textColor="#555"
                android:textSize="@dimen/title_textsize" />

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/btn_marginLeft"
                android:onClick="toBack"
                android:src="@mipmap/btn_back" />

            <TextView
                android:id="@+id/tv_upload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/btn_marginLeft"
                android:clickable="true"
                android:onClick="toUpload"
                android:text="保存"
                android:textSize="@dimen/title_textsize" />
        </RelativeLayout>


        <com.boycy815.pinchimageview.PinchImageView
            android:id="@+id/piv_bg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/mine_arrow_padding"
            android:layout_marginRight="@dimen/mine_arrow_padding"
            android:background="@color/gray" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="换色模板"
            android:textSize="@dimen/text_tip"
            android:textColor="#888"
            android:gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/mine_arrow_padding"
            android:layout_marginRight="@dimen/mine_arrow_padding"
            android:background="@color/gray" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_color"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scrollbars="horizontal" />

    </LinearLayout>

    <com.victor.loading.book.BookLoading
        android:id="@+id/bl_bookloading"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true" />
</RelativeLayout>
